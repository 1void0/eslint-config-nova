{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore: publish",
      "conventionalCommits": true,
      "yes": true
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    }
  }
}
